int longestSubSeg(vector<int> &arr , int n, int k){
    // Write your code here.
    int left=0;
    int maxlen=0;
    int count=0;

    for(int right=0;right<n;right++)
    {
     if(arr[right]==0)
     count++;

     while (count > k) {
     if (arr[left] == 0)
       count--;

           left++;
     }
     maxlen = max(maxlen, right - left + 1);
    }
    return maxlen;
}
